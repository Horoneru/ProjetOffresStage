<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane fx:id="fxmlActif" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.cils.projet.stage.ControllerEntreprise">
    <center>
        <GridPane maxHeight="Infinity" maxWidth="Infinity" onKeyPressed="#checkIfEnterPressed">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Entreprise " GridPane.halignment="RIGHT" />
                <Label text="Adresse (numéro et rue) " GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                <Label text="Code postal " GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                <Label text="Ville" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                <Label text="Mail du contact  (facultatif)" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
                <Label text="Téléphone du contact " GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
                <Label text="Secteur d'activité " GridPane.halignment="RIGHT" GridPane.rowIndex="6" />

                <TextField fx:id="nomEntr" GridPane.columnIndex="1" />
                <TextField fx:id="adresse" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="codePostal" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="ville" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextField fx:id="mail" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <TextField fx:id="tel" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <TextField fx:id="secteur" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
        </GridPane>
    </center>
    <bottom>
        <ButtonBar maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="envoyerEntreprise" mnemonicParsing="false" onAction="#creerEntreprise" text="Envoyer" />
                <Button fx:id="annulerEntreprise" mnemonicParsing="false" onAction="#clear" text="Annuler" textAlignment="CENTER" />
            </buttons>
         <BorderPane.margin>
            <Insets right="5.0" />
         </BorderPane.margin>
        </ButtonBar>
    </bottom>
</BorderPane>
