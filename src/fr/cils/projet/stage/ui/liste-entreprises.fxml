<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.cils.projet.stage.ControllerEntreprise">
    <top>
        <Label text="Liste des entreprises" BorderPane.alignment="CENTER" />
    </top>
    <bottom>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="goModifierEntreprise" mnemonicParsing="false" onAction="#goModifierEntreprise" text="Modifier" GridPane.halignment="CENTER" />
                <Button mnemonicParsing="false" onAction="#supprimerEntreprise" text="Supprimer" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
            </children>
        </GridPane>
    </bottom>
   <center>
      <TableView fx:id="tableauEntreprises" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colonneNom" prefWidth="75.0" text="Nom" />
          <TableColumn fx:id="colonneSecteur" prefWidth="75.0" text="Secteur d'activité" />
            <TableColumn fx:id="colonneSelection" prefWidth="75.0" text="Sélection" />
        </columns>
      </TableView>
   </center>
</BorderPane>
