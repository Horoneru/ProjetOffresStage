<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane fx:id="fxmlActif" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.cils.projet.stage.ControllerOffre">
    <center>
        <GridPane onKeyPressed="#checkIfEnterPressed">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Entreprise " GridPane.halignment="RIGHT" />
                <Label text="Domaine de l'offre " GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                <Label text="Intitulé " GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                <Label text="Date de début du stage " GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                <Label text="Durée (jours) " GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
                <Label text="Descriptif " GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
                <ComboBox fx:id="nomEntr" minWidth="100.0" GridPane.columnIndex="1" />
                <TextField fx:id="domOffre" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="intitule" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <DatePicker fx:id="dateDeb" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextField fx:id="duree" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <TextField fx:id="descr" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
        </GridPane>
    </center>
    <bottom>
        <ButtonBar maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="envoyerOffre" mnemonicParsing="false" onAction="#creerOffre" text="Envoyer" />
                <Button fx:id="annulerOffre" mnemonicParsing="false" onAction="#clear" text="Annuler" textAlignment="CENTER" />
            </buttons>
         <BorderPane.margin>
            <Insets right="5.0" />
         </BorderPane.margin>
        </ButtonBar>
    </bottom>
</BorderPane>
